    script.
      // Enhanced scroll animations and mobile-friendly navigation
      document.addEventListener('DOMContentLoaded', function() {
        // Intersection Observer for smooth fade-in animations
        const observerOptions = {
          threshold: 0.15,
          rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate');
            }
          });
        }, observerOptions);

        // Observe all sections for fade-in effect
        document.querySelectorAll('.section').forEach(section => {
          observer.observe(section);
        });

        // Enhanced observer for cards with staggered animations
        const cardObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate');
            }
          });
        }, { threshold: 0.2, rootMargin: '0px 0px -50px 0px' });

        // Observe program cards with staggered delays
        document.querySelectorAll('.program-card').forEach((card, index) => {
          card.style.setProperty('--card-index', index);
          cardObserver.observe(card);
        });

        // Observe activity cards with staggered delays
        document.querySelectorAll('.activity-card').forEach((card, index) => {
          card.style.setProperty('--card-index', index);
          cardObserver.observe(card);
        });

        // FAB visibility logic
        const fab = document.querySelector('.fab');
        const hero = document.querySelector('.hero');
        const contactSection = document.querySelector('#contact') || document.querySelector('#contact-us') || document.querySelector('.contact');

        function updateFabVisibility() {
          const heroRect = hero.getBoundingClientRect();
          const heroVisible = heroRect.bottom > 0;
          
          let contactVisible = false;
          if (contactSection) {
            const contactRect = contactSection.getBoundingClientRect();
            contactVisible = contactRect.top <= window.innerHeight * 0.8;
          }
          
          if (!heroVisible && !contactVisible) {
            fab.classList.add('show');
          } else {
            fab.classList.remove('show');
          }
        }

        // Optimized FAB updates using requestAnimationFrame
        let fabTicking = false;
        
        function requestFabUpdate() {
          if (!fabTicking) {
            requestAnimationFrame(() => {
              updateFabVisibility();
              fabTicking = false;
            });
            fabTicking = true;
          }
        }

        window.addEventListener('scroll', requestFabUpdate);
        updateFabVisibility();

        // Active navigation link highlighting
        const navLinks = document.querySelectorAll('.nav-link');
        const sections = document.querySelectorAll('section[id]');

        const navObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const id = entry.target.getAttribute('id');
              navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === '#' + id) {
                  link.classList.add('active');
                }
              });
            }
          });
        }, { threshold: 0.6 });

        sections.forEach(section => {
          navObserver.observe(section);
        });

        // Mobile-friendly navigation - replace smooth scroll with instant jump + fade-in
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              // For mobile devices, use instant scroll instead of smooth scroll
              const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
              
              if (isMobile) {
                // Instant scroll for mobile (no lag)
                target.scrollIntoView({ block: 'start' });
                
                // Add a subtle highlight effect to show the section
                target.style.transition = 'all 0.3s ease';
                target.style.transform = 'scale(1.02)';
                target.style.boxShadow = '0 0 30px rgba(99, 102, 241, 0.3)';
                
                setTimeout(() => {
                  target.style.transform = 'scale(1)';
                  target.style.boxShadow = 'none';
                }, 300);
              } else {
                // Smooth scroll only for desktop
                target.scrollIntoView({
                  behavior: 'smooth',
                  block: 'start'
                });
              }
            }
          });
        });

        // Form handling
        document.getElementById('contactForm').addEventListener('submit', async function(e) {
          e.preventDefault();

          const formData = new FormData(this);
          const data = {};
          for (let [key, value] of formData.entries()) {
            data[key] = value.trim();
          }

          // Basic validation
          if (!data.fullName || !data.phone || !data.email || !data.message) {
            alert('אנא מלאו את כל השדות הנדרשים');
            return;
          }

          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(data.email)) {
            alert('אנא הזינו כתובת אימייל תקינה');
            return;
          }

          const phoneRegex = /^05[0-9]-?[0-9]{7}$/;
          if (!phoneRegex.test(data.phone.replace(/\s/g, ''))) {
            alert('אנא הזינו מספר טלפון תקין (פלאפון)');
            return;
          }

          const submitBtn = this.querySelector('.submit-btn');
          const originalText = submitBtn.textContent;

          // Add spinner
          submitBtn.innerHTML = `
            שולח...  <span class="spinner"></span>
          `;
          submitBtn.disabled = true;

          try {
            const response = await fetch('/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(data)
            });

            if (response.redirected) {
              const url = new URL(response.url);
              if (url.searchParams.get('success')) {
                // Replace form with success message
                this.outerHTML = `
                  <div class="form-success">
                    <?xml version="1.0" encoding="UTF-8"?><svg width="80px" height="80px" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" color="#0cc68f">
                      <path d="M7 12.5L10 15.5L17 8.5" stroke="#0cc68f" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                      <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#0cc68f" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                    <h2>ההודעה נשלחה בהצלחה!</h2>
                    <p>תודה שפנית אלינו, נחזור אליך בהקדם.</p>
                  </div>
                `;
              } else {
                alert(url.searchParams.get('error') || 'אירעה שגיאה בשליחת הטופס. אנא נסו שוב.');
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
              }
            } else {
              alert('אירעה שגיאה בשליחת הטופס. אנא נסו שוב.');
              submitBtn.innerHTML = originalText;
              submitBtn.disabled = false;
            }
          } catch (error) {
            console.error('Error submitting form:', error);
            alert('שגיאה בשליחת הטופס. אנא נסו שוב מאוחר יותר.');
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
          }
        });


        // Mobile-optimized parallax effect for hero
        let ticking = false;
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        
        function updateParallax() {
          // Disable parallax on mobile for better performance
          if (isMobile) {
            ticking = false;
            return;
          }
          
          const scrolled = window.pageYOffset;
          const hero = document.querySelector('.hero');
          if (hero && scrolled < window.innerHeight) {
            hero.style.transform = `translateY(${scrolled * 0.3}px)`; // Reduced intensity
          }
          ticking = false;
        }

        function requestParallaxUpdate() {
          if (!ticking && !isMobile) {
            requestAnimationFrame(updateParallax);
            ticking = true;
          }
        }

        // Only add parallax on desktop
        if (!isMobile) {
          window.addEventListener('scroll', requestParallaxUpdate);
        }

        // Initialize hero animation
        const hero = document.querySelector('.hero');
        if (hero) {
          // Ensure hero is visible
          hero.style.opacity = '1';
        }
      });